[Unit]
Description=Aba's distributed currency daemon
After=network.target

[Service]
User=aba
Group=aba

Type=forking
PIDFile=/var/lib/ccbcd/ccbcd.pid

ExecStart=/usr/bin/ccbcd -daemon -pid=/var/lib/ccbcd/ccbcd.pid \
          -conf=/etc/aba/aba.conf -datadir=/var/lib/ccbcd

ExecStop=-/usr/bin/aba-cli -conf=/etc/aba/aba.conf \
         -datadir=/var/lib/ccbcd stop

Restart=always
PrivateTmp=true
TimeoutStopSec=60s
TimeoutStartSec=2s
StartLimitInterval=120s
StartLimitBurst=5

[Install]
WantedBy=multi-user.target
